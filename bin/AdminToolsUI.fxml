<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AdminToolsUIController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="400.0" spacing="20.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label text="Administrator tools">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Button fx:id="btnCustomersAlphabetical" mnemonicParsing="false" onAction="#handleBtnCustomersAlphabetical" text="Invoices by customer name">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="btnCustomersLocation" mnemonicParsing="false" onAction="#handleBtnCustomersLocation" text="Invoices by restaurant location">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Label fx:id="lblError" textFill="RED" />
         </children>
      </VBox>
   </children>
</AnchorPane>
